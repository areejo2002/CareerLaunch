@model CareerLaunchpad.DTOs.ResumeDto

@{
    ViewData["Title"] = "Edit Resume";
}

<h2>Edit Resume</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="ResumeId" />

    <div class="form-group">
        <label asp-for="FirstName"></label>
        <input asp-for="FirstName" class="form-control" />
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="LastName"></label>
        <input asp-for="LastName" class="form-control" />
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PhoneNumber"></label>
        <input asp-for="PhoneNumber" class="form-control" />
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Bio"></label>
        <textarea asp-for="Bio" class="form-control" rows="3"></textarea>
        <span asp-validation-for="Bio" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Educations"></label>
        <textarea asp-for="Educations" class="form-control" rows="5" placeholder="Example:&#10;B.Sc. in Computer Science at Hashemite University (2020-2024), GPA: 3.33"></textarea>
        <span asp-validation-for="Educations" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Experiences"></label>
        <textarea asp-for="Experiences" class="form-control" rows="5" placeholder="Example:&#10;Intern at CompanyX (2023-2024), Duties: Developed web app"></textarea>
        <span asp-validation-for="Experiences" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Certificates"></label>
        <textarea asp-for="Certificates" class="form-control" rows="4" placeholder="Example:&#10;AI Certificate from Google (2023), GPA: 95"></textarea>
        <span asp-validation-for="Certificates" class="text-danger"></span>
    </div>

 

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
