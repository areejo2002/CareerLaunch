<!-- Views/Shared/_AdminLayout.cshtml -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Admin Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <style>
        :root {
            --primary: #00695c;
            --secondary: #004d40;
            --accent: #26a69a;
            --light-bg: #f0f4f8;
            --card-bg: #ffffff;
        }

        body {
            display: flex;
            min-height: 100vh;
            font-family: 'Inter', sans-serif;
            background-color: var(--light-bg);
        }

        .sidebar {
            width: 280px;
            background-color: var(--secondary);
            color: #fff;
        }

            .sidebar .nav-link {
                color: rgba(255,255,255,0.8);
                padding: 0.75rem 1.5rem;
                margin: 0.25rem 0;
                border-radius: 0.5rem;
                display: flex;
                align-items: center;
            }

                .sidebar .nav-link .fa-fw {
                    width: 1.25rem;
                }

                .sidebar .nav-link.active,
                .sidebar .nav-link:hover {
                    background-color: var(--primary);
                    color: #fff;
                    text-decoration: none;
                }

            .sidebar .brand {
                font-size: 1.5rem;
                font-weight: 700;
                padding: 1.5rem;
                text-align: center;
                border-bottom: 1px solid rgba(255,255,255,0.1);
            }

        .content {
            flex: 1;
            padding: 2rem 2.5rem;
            overflow-y: auto;
        }

        .topbar {
            height: 56px;
            background: var(--card-bg);
            border-bottom: 1px solid #e0e0e0;
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 0 1rem;
            margin-bottom: 1.5rem;
        }

        .card-highlight {
            background: linear-gradient(135deg, var(--accent), var(--primary));
            color: #fff;
            border: none;
            border-radius: 0.75rem;
            position: relative;
            overflow: hidden;
        }

            .card-highlight .icon {
                font-size: 2.5rem;
                opacity: 0.2;
                position: absolute;
                top: -10px;
                right: -10px;
            }

            .card-highlight .stat {
                font-size: 2rem;
                font-weight: 600;
            }

        table thead {
            background: var(--secondary);
            color: #fff;
        }

        table tbody tr:hover {
            background: #e8f5f2;
        }
    </style>
</head>
<body>
    <nav class="sidebar d-flex flex-column">
        <div class="brand p-3">Admin Panel</div>
        <ul class="nav flex-column px-2">
            <li class="nav-item">
                <a asp-controller="Admin"
                   asp-action="Index"
                   class="nav-link">
                    <i class="fas fa-tachometer-alt fa-fw me-2"></i>Dashboard
                </a>
            </li>
            <li class="nav-item">
                <a asp-controller="Admin"
                   asp-action="Users"
                   class="nav-link">
                    <i class="fas fa-users fa-fw me-2"></i>Users
                </a>
            </li>
            <li class="nav-item">
                <a asp-controller="Admin"
                   asp-action="Resumes"
                   class="nav-link">
                    <i class="fas fa-file-alt fa-fw me-2"></i>Resumes
                </a>
            </li>
            <li class="nav-item">
                <a asp-controller="Admin"
                   asp-action="Portfolios"
                   class="nav-link">
                    <i class="fas fa-briefcase fa-fw me-2"></i>Portfolios
                </a>
            </li>
            <li class="nav-item">
                <a asp-controller="Admin"
                   asp-action="Message"
                   class="nav-link">
                    <i class="fas fa-project-diagram fa-fw me-2"></i>Message
                </a>
            </li>
        </ul>
    </nav>

    <div class="content">
        <div class="topbar">
            <div><h4 class="mb-0">@ViewData["Title"]</h4></div>
            <div><i class="fas fa-user-circle fa-lg"></i> @User.Identity.Name</div>
        </div>
        @RenderBody()
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>