@model CareerLaunchpad.Models.Portfolio
@{
    ViewData["Title"] = "Delete Portfolio";
}

<link rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-8">

            <div class="card border-danger shadow-sm">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">Delete Portfolio</h4>
                </div>
                <div class="card-body">
                    <p>
                        Are you sure you want to delete the portfolio of
                        <strong>@Model.FirstName @Model.LastName</strong>?
                    </p>
                    <p class="text-muted">
                        This action cannot be undone.
                    </p>
                </div>
                <div class="card-footer d-flex justify-content-end">
                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="PortfolioId" />
                        <button type="submit"
                                class="btn btn-danger me-2">
                            Yes, Delete
                        </button>
                    </form>
                    <a asp-action="Index" class="btn btn-secondary">
                        Cancel
                    </a>
                </div>
            </div>

        </div>
    </div>
</div>
